<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <include
        android:id="@+id/actionBar_layout"
        layout="@layout/recharge_actionbar"
        ></include>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/money_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="充值金额"
            android:textSize="17sp"
            />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        >

        <TextView
            android:id="@+id/price10"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="10元"
            android:textColor="#FF0000"
            android:layout_margin="10dp"
            android:background="@drawable/deleteorder_btn_bg"
            />

        <TextView
            android:id="@+id/price20"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="20元"
            android:textColor="#FF0000"
            android:background="@drawable/deleteorder_btn_bg"
            />

        <TextView
            android:id="@+id/price50"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="50元"
            android:textColor="#FF0000"
            android:layout_margin="10dp"
            android:background="@drawable/deleteorder_btn_bg"
            />

        <TextView
            android:id="@+id/price100"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="100元"
            android:textColor="#FF0000"
            android:layout_margin="10dp"
            android:background="@drawable/deleteorder_btn_bg"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择充值方式"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/alipay_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        >

        <ImageView
            android:id="@+id/alipay_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/alipay_icon"
            />

        <TextView
            android:id="@+id/alipay_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/alipay_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="支付宝"
            />

        <ImageView
            android:id="@+id/alipay_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/pay_noselect_rb"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/wchatpay_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        >

        <ImageView
            android:id="@+id/wchatpay_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/wchatpay_icon"
            />

        <TextView
            android:id="@+id/wchatpay_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/wchatpay_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="微信支付"
            />

        <ImageView
            android:id="@+id/wchatpay_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/pay_noselect_rb"
            />

    </RelativeLayout>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <Button
           android:id="@+id/pay_btn"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentTop="true"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:text="下一步"
           android:textSize="20sp"
           android:textColor="#FFFFFF"
           android:background="@drawable/pay_btn_bg"
           android:onClick="pay"
           />
   </RelativeLayout>

</LinearLayout>
