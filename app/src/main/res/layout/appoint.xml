<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    >


    <include
        android:id="@+id/actionBar_layout"
        layout="@layout/appoint_actionbar"
        ></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#FFFFFF"
        >
        <TextView
            android:id="@+id/orgName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="天明科技大厦"
            android:textSize="20sp"
            android:textColor="@color/actionbar_bg"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        >
        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/charge_location"
            />

        <TextView
            android:id="@+id/addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广州省深圳市南山区滨海大道"
            android:layout_marginLeft="5dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="10dp"

        >

        <LinearLayout
            android:id="@+id/facilityName_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电桩：" />

            <TextView
                android:id="@+id/facilityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12号"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/facilityType_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备：" />

            <TextView
                android:id="@+id/facilityType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="直流桩"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="10dp"
        >

        <LinearLayout
            android:id="@+id/facilityId_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约码：" />

            <TextView
                android:id="@+id/orderNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未预约"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/facilityMode_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="速率：" />

            <TextView
                android:id="@+id/facilityMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快充"
                android:textColor="#000000" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:layout_marginTop="1dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="适合车型："
            />

        <TextView
            android:id="@+id/applicableCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="国标、特斯拉"
            android:textColor="#000000"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/time15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="15分钟"
            android:textColor="#FFFFFF"
            android:background="@drawable/gray_color_btn_bg"
            />

        <TextView
            android:id="@+id/time30"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="30分钟"
            android:textColor="#FFFFFF"
            android:background="@drawable/gray_color_btn_bg"
            />
        <TextView
            android:id="@+id/time45"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="45分钟"
            android:textColor="#FFFFFF"
            android:background="@drawable/gray_color_btn_bg"
            />
        <TextView
            android:id="@+id/time60"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="60分钟"
            android:textColor="#FFFFFF"
            android:background="@drawable/gray_color_btn_bg"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="预约费用"
            />

        <TextView
            android:id="@+id/appoint_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="¥0.0"
            android:textColor="#FF0000"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/appoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/actionbar_color_btn_bg"
        android:text="立即预约"
        android:textColor="#FFFFFF"
        android:onClick="appoint"
        />

</LinearLayout>
