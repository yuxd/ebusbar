<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/pile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="1号桩"
        />


    <ImageView
        android:id="@+id/appoint_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/selectpileappointbtn"
        />

    <LinearLayout
        android:id="@+id/info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/charge_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="慢充220V"
            />

        <TextView
            android:id="@+id/pile_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="空闲中"
            android:textColor="#009b4c"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/pile_name"
        android:layout_toLeftOf="@id/info_layout"
        android:layout_centerVertical="true"
        android:gravity="center"
        >

        <TextView
            style="@style/vertLine"
            />

    </LinearLayout>

</RelativeLayout>
