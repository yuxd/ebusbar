<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <include
        android:id="@+id/actionBar_layout"
        layout="@layout/charge_actionbar"></include>

    <LinearLayout
        android:id="@+id/charge_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="30dp">

        <ImageView
            android:id="@+id/charge_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="charge"
            android:src="@drawable/start_charge" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/orgName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天明科技大厦"
                android:textColor="@color/actionbar_bg"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/facilityName_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电桩：" />

                <TextView
                    android:id="@+id/facilityName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12号"
                    android:textColor="#000000" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/facilityType_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备：" />

                <TextView
                    android:id="@+id/facilityType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="直流桩"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>



            <LinearLayout
                android:id="@+id/facilityMode_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="速率：" />

                <TextView
                    android:id="@+id/facilityMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快充"
                    android:textColor="#000000" />
            </LinearLayout>


        <LinearLayout
            android:id="@+id/facilityId_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电桩编号：" />

            <TextView
                android:id="@+id/facilityId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000000073"
                android:textColor="#000000" />

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/charge_time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:padding="10dp">

        <TextView
            android:id="@+id/charge_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="充电时间" />

        <TextView
            android:id="@+id/charge_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="0:00"
            android:textColor="#FF0000" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/charge_degress_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:padding="10dp">

        <TextView
            android:id="@+id/charge_degress_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="充电度数" />

        <TextView
            android:id="@+id/charge_degress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="0.0度"
            android:textColor="#FF0000" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/charge_money_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:padding="10dp">

        <TextView
            android:id="@+id/charge_money_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="充电花费" />

        <TextView
            android:id="@+id/charge_money_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="¥0.00"
            android:textColor="#FF0000" />
    </RelativeLayout>

</LinearLayout>
