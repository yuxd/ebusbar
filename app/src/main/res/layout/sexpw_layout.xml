<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:id="@+id/loopView_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        >

        <com.weidongjian.meitu.wheelviewdemo.view.LoopView
            android:id="@+id/loopView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            ></com.weidongjian.meitu.wheelviewdemo.view.LoopView>

    </LinearLayout>




    <RelativeLayout
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/loopView_layout"
        android:background="#FFFFFF"
        >

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="取消"
            android:textColor="#FF0000"
            android:textSize="15sp"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="完成"
            android:textColor="#FF0000"
            android:textSize="15sp"
            android:padding="10dp"
            />

    </RelativeLayout>

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tool"
        android:background="@drawable/pw_bg"
        />

</RelativeLayout>
